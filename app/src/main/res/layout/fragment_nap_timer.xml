<RelativeLayout xmlns:app="http://schemas.android.com/apk/res/com.devadvance.circulartest"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/relativeLayout2"
    android:background="#000"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".NapTimerFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0h 00m"
        android:textSize="64sp"
        android:id="@+id/timer"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-7dp"
        android:paddingBottom="0dp"/>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/timer"
        android:id="@+id/circleLayout"
        android:layout_marginTop="0dp">

        <ImageView
            android:layout_width="275dp"
            android:layout_height="match_parent"
            android:src="@drawable/clock3"
            android:layout_centerInParent="true"
            android:alpha="0.7"
            android:rotation="1.5"
            />

        <ashsax.test497.CircularSeekBar
            android:id="@+id/napSeekBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app1:lock_enabled="false"
            android:layout_centerInParent="true"
            app1:move_outside_circle="true"
            app1:circle_color="#C0CCCCCC"
            app1:circle_progress_color="#503B35DE"/>

        <ImageView
            android:id="@+id/zzz"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/z0"
            android:layout_centerInParent="true"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            />

    </RelativeLayout>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:textOff="Set Alarm"
        android:textOn="Disable Alarm"
        android:id="@+id/startTimerButton"
        android:layout_below="@+id/circleLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

</RelativeLayout>
